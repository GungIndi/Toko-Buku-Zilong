<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs', { title }) %>
</head>
<body>
    <div class="d-flex" style="width: 100%">

        <main class="d-flex bg-dark-subtle justify-content-center align-items-center" style="height: 100vh; width: 100%">
            <form action="/register" method="POST" class="login-form">
                <h1>Register</h1>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" name="address" placeholder="Enter Address" value="<%= typeof address != 'undefined' ? address : '' %>" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="text" name="phone" placeholder="Enter Phone Number" value="<%= typeof phone != 'undefined' ? phone : '' %>" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="radio" id="active" name="isActive" value="Active" <%= typeof isActive != 'undefined' && isActive === 'Active' ? 'checked' : '' %> class="form-check-input" />
                    <label for="active">Active</label>
                    <input type="radio" id="not-active" name="isActive" value="Not Active" <%= typeof isActive != 'undefined' && isActive === 'Not Active' ? 'checked' : '' %> class="form-check-input" />
                    <label for="not-active">Not Active</label><br />
                </div>
                <div class="form-group">
                    <input type="radio" id="admin" name="userType" value="Admin" <%= typeof userType != 'undefined' && userType === 'Admin' ? 'checked' : '' %> class="form-check-input" />
                    <label for="admin">Admin</label>
                    <input type="radio" id="member" name="userType" value="Member" <%= typeof userType != 'undefined' && userType === 'Member' ? 'checked' : '' %> class="form-check-input" />
                    <label for="member">Member</label><br />
                </div>
                <div class="form-gr
                oup">
                    <label for="Username">Username</label>
                    <input type="text" name="username" placeholder="Create Username" value="<%= typeof username != 'undefined' ? username : '' %>" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Register</button>
                <p>Have An Account? <a href="/login">Login</a></p>
            </form>
        </main>
    </div>
    <%- include('./partials/js.ejs') %>
</body>
</html>
