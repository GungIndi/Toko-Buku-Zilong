
<div
  class="modal fade"
  id="edit-modal-<%= book._id %>"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Book</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/books/<%= book._id %>?_method=PUT" method="POST">
        <div class="modal-body">
            <div class="form-group">
              <label for="title">Title</label>
              <input
                value = "<%= book.title%>"
                type="text"
                class="form-control"
                id="title"
                name="title"
                placeholder="Enter Title"
                required
              />
            </div>
            <div class="form-group">
              <label for="title">Author</label>
              <input
                value = "<%= book.author%>"
                type="text"
                class="form-control"
                id="author"
                name="author"
                placeholder="Enter Author"
                required
              />
            </div>
            <div class="form-group">
              <label for="title">Publisher</label>
              <input
                value = "<%= book.publisher%>"
                type="text"
                class="form-control"
                id="publisher"
                name="publisher"
                placeholder="Enter publisher"
                required
              />
            </div>
            <div class="form-group">
              <label for="title">Publication Year</label>
              <input
                value = "<%= book.publicationYear%>"
                type="text"
                class="form-control"
                id="publicationYear"
                placeholder="Masukan Publication Year"
                name="publicationYear"
                required
              />
            </div>
            <div class="form-group">
              <label for="title">Stock</label>
              <input
                value = "<%= book.stock%>"
                type="text"
                class="form-control"
                id="stock"
                placeholder="Masukan Stock"
                name="stock"
                required
              />
            </div>
            <div class="form-group">
              <label for="title">genre</label>
              <div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="genre1" name="genre" value="Fantasy"
                    <% if (book.genre.includes("Fantasy")) { %> checked <% } %> >
                    
                    <label class="form-check-label" for="genre1">Fantasy</label>
                    
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="genre2" name="genre" value="Science Fiction"
                    <% if (book.genre.includes("Science Fiction")) { %> checked <% } %> >

                    <label class="form-check-label" for="genre2">Science Fiction</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="genre3" name="genre" value="Mystery"
                    <% if (book.genre.includes("Mystery")) { %> checked <% } %> >
                    
                    <label class="form-check-label" for="genre3">Mystery</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="genre4" name="genre" value="Horror"
                    <% if (book.genre.includes("Horror")) { %> checked <% } %> >
                    
                    <label class="form-check-label" for="genre4">Horror</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="genre5" name="genre" value="Comedy"
                    <% if (book.genre.includes("Comedy")) { %> checked <% } %> >
               
                    <label class="form-check-label" for="genre5">Comedy</label>
                  </div>
                </div>
            </div>
            <div class="form-group">
              <label for="title">price</label>
              <input
                value = "<%= book.price%>"
                type="number"
                class="form-control"
                id="price"
                placeholder="Masukan price"
                name="price"
                required
              />
            </div>
          </div>
        <div class="modal-footer">
          <input type="hidden" class="id" name="id" />
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>