<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs', { title, userType }) %>
  </head>
  <body>
    <div class="d-flex" style="width: 100%">
      <%- include('./partials/sidebar.ejs') %>
      <main class="d-flex bg-dark-subtle justify-content-center align-items-center" style="height: 100vh; width: 100%">
        <div class="d-flex flex-column align-items-center me-lg-3">
          <h1 class="fw-bold mb-4">Reports</h1>
          <div class="d-flex">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#reportModal">Filter</button>
          </div>
        </div>
      </main>
    </div>
    <%- include('./partials/js.ejs') %>
      <div class="modal fade" id="reportModal" data-bs-keyboard="false"
          tabindex="-1">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title mb-3 fs-5">
                Filter
              </h1>
              <button type="button" class="btn-close"
                  data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              Collection Name
              <hr>
              <form id="reportModalForm" method="POST" action="/report">
                <div class="form-check form-check-inline" id="collection">
                  <input class="form-check-input" type="radio" name="collection" id="books" value="books" checked>
                  <label class="form-check-label" for="books">Books</label>
                </div>
                <div class="form-check form-check-inline" id="collection">
                  <input class="form-check-input" type="radio" name="collection" id="users" value="users">
                  <label class="form-check-label" for="users">Users</label>
                </div>
                <div class="form-check form-check-inline" id="collection">
                  <input class="form-check-input" type="radio" name="collection" id="transactions" value="transactions">
                  <label class="form-check-label" for="transactions">Transactions</label>
                </div>
                <hr>
                
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Back</button>
                  <button type="submit" name="submit" value="true" class="btn btn-success">Search</button>
                </div>
              </form>
            </div>
            
          </div>
        </div>
      </div>
  </body>
</html>
